{
    "compilerOptions": {
        "lib": [
        "ES2020",
        "DOM",
        "DOM.Iterable"
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",

        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        "strict": true,
        "skipLibCheck": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src"
    ]
}
